<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceGigLog">

    <TextView
        android:id="@+id/textView"
        android:layout_width="392dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:background="#8BDF29"
        android:text="Service Gig Log"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="342dp"
        android:layout_height="8dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="35dp"
        android:background="#8BDF29"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serach_btn" />

    <EditText
        android:id="@+id/service_1"
        android:layout_width="369dp"
        android:layout_height="39dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:hint="Service 1"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/service_2"
        android:layout_width="372dp"
        android:layout_height="43dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:hint="Service 2"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="398dp"
        android:layout_height="59dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="4dp"
        android:background="#8BDF29"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/count_service"
        android:layout_width="75dp"
        android:layout_height="33dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="168dp"
        android:background="#8BC34A"
        android:text="Count"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/serach_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="56dp"
        android:backgroundTint="#8BDF29"
        android:text="Search"
        android:textColor="#0C0C0C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextText"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="216dp"
        android:layout_height="35dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Search Service  ..."
        android:inputType="text"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_service" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/serach_btn"
        app:layout_constraintTop_toBottomOf="@+id/count_service"
   />


</androidx.constraintlayout.widget.ConstraintLayout>